#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_SERVICES='elasticsearch.base,kibana.base,grafana.base'
export CONTECO_DC_GLOBAL='$CONTECO_DC_KIBANA_ELASTICSEARCH_HOSTS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_KIBANA_ELASTICSEARCH_HOSTS=http://elasticsearch:9200
# END GLOBAL SETTINGS

# START SETTINGS elasticsearch.base
export CONTECO_DC_ELASTICSEARCH_PORTS="9200:9200"
export CONTECO_DC_ELASTICSEARCH_NETWORKS="${CONTECO_ECOSYSTEM}_overlay"
export CONTECO_DC_ELASTICSEARCH_VOLUMES_NAME="${CONTECO_ECOSYSTEM}_elasticsearch_volume"
export CONTECO_DC_ELASTICSEARCH_DEPLOY_RESOURCES_LIMITS_CPUS="0.75"
export CONTECO_DC_ELASTICSEARCH_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.1"
export CONTECO_DC_ELASTICSEARCH_DEPLOY_RESOURCES_LIMITS_MEMORY="384m"
export CONTECO_DC_ELASTICSEARCH_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="256m"
# END SETTINGS elasticsearch.base

# START SETTINGS kibana.base
export CONTECO_DC_KIBANA_PORTS="5601:5601"
export CONTECO_DC_KIBANA_NETWORKS="${CONTECO_ECOSYSTEM}_overlay"
export CONTECO_DC_KIBANA_ENVIRONMENT_ELASTICSEARCH_HOSTS=http://elasticsearch:9200
export CONTECO_DC_KIBANA_ENVIRONMENT_SERVER_BASEPATH=
export CONTECO_DC_KIBANA_DEPLOY_RESOURCES_LIMITS_CPUS="0.75"
export CONTECO_DC_KIBANA_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.05"
export CONTECO_DC_KIBANA_DEPLOY_RESOURCES_LIMITS_MEMORY="256m"
export CONTECO_DC_KIBANA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="128m"
# END SETTINGS kibana.base

# START SETTINGS grafana.base
export CONTECO_DC_GRAFANA_PORTS="3000:3000"
export CONTECO_DC_GRAFANA_NETWORKS="${CONTECO_ECOSYSTEM}_overlay"
export CONTECO_DC_GRAFANA_ENVIRONMENT_GF_SERVER_ROOT_URL=""
export CONTECO_DC_GRAFANA_VOLUMES_NAME="${CONTECO_ECOSYSTEM}_grafana_volume"
export CONTECO_DC_GRAFANA_DEPLOY_RESOURCES_LIMITS_CPUS="0.75"
export CONTECO_DC_GRAFANA_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.05"
export CONTECO_DC_GRAFANA_DEPLOY_RESOURCES_LIMITS_MEMORY="256m"
export CONTECO_DC_GRAFANA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="128m"
# END SETTINGS grafana.base

# START TOPLEVEL SETTINGS
export CONTECO_DC_GLOBAL_NETWORKS="${CONTECO_ECOSYSTEM}_overlay: {external: true}"
export CONTECO_DC_GLOBAL_VOLUMES="${CONTECO_DC_ELASTICSEARCH_VOLUMES_NAME}: { },${CONTECO_DC_GRAFANA_VOLUMES_NAME}: { }"
# END TOPLEVEL SETTINGS

