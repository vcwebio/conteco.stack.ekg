#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="stack.ekg"
export CONTECO_DC_GLOBAL_STACKNAMES="conteco_dc_ekg"
export CONTECO_DC_GLOBAL_BOOTSTACKS="conteco_dc_ekg"
export CONTECO_DC_GLOBAL_RUNSTACKS=""
export CONTECO_DC_GLOBAL_VOLUME_LIST="${DOLLAR}{CONTECO_STACKPREFIX}_elasticsearch_volume,${DOLLAR}{CONTECO_STACKPREFIX}_grafana_volume"
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_VOLUMES,$CONTECO_DC_GLOBAL_NETWORKS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_STACK_STACKS='elasticsearch.base,kibana.base,grafana.base'
export CONTECO_DC_GLOBAL_STACK_STACKNAMES="conteco_dc_elasticsearch,conteco_dc_kibana,conteco_dc_grafana"
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay: { external: true }"
export CONTECO_DC_GLOBAL_VOLUMES="${DOLLAR}{CONTECO_STACKPREFIX}_elasticsearch_volume: { external: true },${DOLLAR}{CONTECO_STACKPREFIX}_grafana_volume: { external: true },"
# END GLOBAL SETTINGS

# START SETTINGS elasticsearch.base
export CONTECO_DC_EKG_ELASTICSEARCH_DEPLOY_RESOURCES_LIMITS_MEMORY="756m"
export CONTECO_DC_EKG_ELASTICSEARCH_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="512m"
# END SETTINGS elasticsearch.base

# START SETTINGS kibana.base
export CONTECO_DC_EKG_KIBANA_DEPLOY_RESOURCES_LIMITS_MEMORY="512m"
export CONTECO_DC_EKG_KIBANA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="256m"
# END SETTINGS kibana.base

# START SETTINGS grafana.base
export CONTECO_DC_EKG_GRAFANA_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export CONTECO_DC_EKG_GRAFANA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="64m"
# END SETTINGS grafana.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS

